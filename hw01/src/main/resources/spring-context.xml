<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="fileManager" class="ru.otus.spring.utils.FileManager">
        <constructor-arg index="0" value="questions.csv"/>
    </bean>

    <bean id="questionsDao" class="ru.otus.spring.dao.QuestionsDaoImpl">
        <constructor-arg index="0" ref="fileManager"/>
    </bean>

</beans>
